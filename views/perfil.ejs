<body>
    <%- include("./plantillas/nav.ejs") %>
    <%- include("./plantillas/barra_superior.ejs") %>

    <main>
        <div id="infoUsuario">
            <h2>PERFIL</h2>
            <p>Usuario:<%= datos.usuario %></p>
            <p>Nombre: <%= datos.nombre%></p>
            <p>Correo: <%= datos.correo %></p>
            <form action="/actualizar-contra" method="post" class="formDato">
                <label for="contra">Contra:</label>
                <div id="contenedor_Contra">
                    <input class="dato" type="password" id="contra" name="contra" required maxlength="45" minlength="8" value="<%= datos.contra %>">
                    <i id="ojo" class="fa-solid fa-eye"></i>
                </div>

                <button class="save" disabled><i class="fa-solid fa-floppy-disk"></i></button>
            </form>
            <form action="/actualizar-img" method="post" class="formDato">
                <label for="url_imagen">URL IMG:</label>
                <div id="contenedor_url_imagen">
                    <input class="dato" type="text" id="url_imagen" name="url_imagen" maxlength="600" value="<%= datos.url_imagen %>">
                </div>
                <button class="save" disabled><i class="fa-solid fa-floppy-disk"></i></button>
            </form>
        </div>
    </main>


