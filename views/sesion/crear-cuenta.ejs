            <label for="nombre">Nombre/s</label>
            <input type="text" name="nombre" id="nombre" required/>
        </div>
        <div class="form-group">
            <label for="apellidos">Apellidos</label>
            <input type="text" name="apellidos" id="apellidos" required/>
        </div>
        <div class="form-group">
            <label for="usuario">Usuario</label>
            <input type="text" name="usuario" required id="usuario"/>
        </div>
        <div class="form-group">
            <label for="correo">Correo</label>
            <input type="email" name="correo" id="correo" required placeholder="@gmail.com"/>
        </div>
        <div class="form-group form-contra">
            <label for="contra">Contrase침a</label>
            <input type="password" name="contra" required placeholder="Contrase침a" id="contra1"/>
